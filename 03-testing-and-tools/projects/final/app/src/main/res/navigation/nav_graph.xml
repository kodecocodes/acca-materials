<navigation android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/discoverFragment">

  <fragment
      android:id="@+id/discoverFragment"
      android:name="com.raywenderlich.android.tacotuesday.discover.DiscoverFragment"
      android:label="discover_fragment"
      tools:layout="@layout/fragment_discover">
    <action
        android:id="@+id/action_discoverFragment_to_tryItRecipesFragment"
        app:destination="@id/tryItRecipesFragment" />
    <action
        android:id="@+id/action_discoverFragment_to_recipeDetailFragment"
        app:destination="@id/recipeDetailFragment" />
    <action
        android:id="@+id/action_discoverFragment_to_settingsFragment"
        app:destination="@id/settingsFragment" />
  </fragment>

  <fragment
      android:id="@+id/tryItRecipesFragment"
      android:name="com.raywenderlich.android.tacotuesday.tryIt.TryItRecipesFragment"
      android:label="fragment_try_it_recipes_list"
      tools:layout="@layout/fragment_try_it_recipes_list">
    <action
        android:id="@+id/action_tryItRecipesFragment_to_recipeDetailFragment"
        app:destination="@id/recipeDetailFragment" />
  </fragment>

  <fragment
      android:id="@+id/recipeDetailFragment"
      android:name="com.raywenderlich.android.tacotuesday.detail.RecipeDetailFragment"
      android:label="recipe_detail_fragment"
      tools:layout="@layout/fragment_recipe_detail">
    <argument
        android:name="recipeId"
        app:argType="long" />
  </fragment>

  <fragment
      android:id="@+id/settingsFragment"
      android:name="com.raywenderlich.android.tacotuesday.settings.SettingsFragment"
      android:label="SettingsFragment" />
</navigation>